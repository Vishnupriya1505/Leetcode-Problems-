class Solution {
    public boolean detectCapitalUse(String word) {
        if(word.length()==1){
            return true;
        }
        boolean isSecUpper = Character.isUpperCase(word.charAt(1));
         for (int i = 1; i < word.length(); i++) {
            if (isSecUpper) {
                if (!Character.isUpperCase(word.charAt(i))) {
                    return false;
                }
            } 
            else {
                if (Character.isUpperCase(word.charAt(i))) {
                    return false;
                }
            }
    }
    return true;
}
}
