class Solution {
    public String maximumOddBinaryNumber(String s) {        
        int ones = countOnes(s, 0);
        int zeros = s.length() - ones;        
        StringBuilder result = new StringBuilder();        
        buildOnes(result, ones - 1);        
        buildZeros(result, zeros);        
        result.append('1');        
        return result.toString();
    }
    private int countOnes(String s, int index) {
        if (index == s.length()) {
            return 0;
        }
        if (s.charAt(index) == '1') {
            return 1 + countOnes(s, index + 1);
        } else {
            return countOnes(s, index + 1);
        }
    }
    private void buildOnes(StringBuilder sb, int count) {
        if (count == 0) return;
        
        sb.append('1');
        buildOnes(sb, count - 1);
    }
    private void buildZeros(StringBuilder sb, int count) {
        if (count == 0) return;
        sb.append('0');
        buildZeros(sb, count - 1);
    }
}
